<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property>
        <name>yarn.resourcemanager.hostname</name>
        <value>{{ resourcemanager_ip }}</value>
        <description>Use IP address to avoid hostname resolution issues</description>
    </property>
    <property>
        <name>yarn.nodemanager.aux-services</name>
        <value>mapreduce_shuffle</value>
    </property>
    <property>
        <name>yarn.nodemanager.aux-services.mapreduce_shuffle.class</name>
        <value>org.apache.hadoop.mapred.ShuffleHandler</value>
    </property>
    <property>
        <name>yarn.resourcemanager.webapp.address</name>
        <value>{{ yarn_resourcemanager_webapp_address }}</value>
        <description>Listen on localhost only for security. Access via SSH tunnel.</description>
    </property>
    <property>
        <name>yarn.nodemanager.webapp.address</name>
        <value>{{ yarn_nodemanager_webapp_address }}</value>
        <description>Listen on localhost only for security. Access via SSH tunnel.</description>
    </property>
    <property>
        <name>yarn.resourcemanager.address</name>
        <value>{{ resourcemanager_ip }}:8032</value>
    </property>
    <property>
        <name>yarn.resourcemanager.scheduler.address</name>
        <value>{{ resourcemanager_ip }}:8030</value>
    </property>
    <property>
        <name>yarn.resourcemanager.resource-tracker.address</name>
        <value>{{ resourcemanager_ip }}:8031</value>
    </property>
    <property>
        <name>yarn.nodemanager.resource.memory-mb</name>
        <value>4096</value>
    </property>
    <property>
        <name>yarn.nodemanager.resource.cpu-vcores</name>
        <value>2</value>
    </property>
    <property>
        <name>yarn.scheduler.minimum-allocation-mb</name>
        <value>512</value>
    </property>
    <property>
        <name>yarn.scheduler.maximum-allocation-mb</name>
        <value>4096</value>
    </property>
    <property>
        <name>yarn.log-aggregation-enable</name>
        <value>true</value>
    </property>
    <property>
        <name>yarn.nodemanager.local-dirs</name>
        <value>{{ hadoop_install_dir }}/data/yarn/local</value>
    </property>
    <property>
        <name>yarn.nodemanager.log-dirs</name>
        <value>{{ hadoop_install_dir }}/data/yarn/logs</value>
    </property>
</configuration>
